<h1><%= @line.name %></h1>
<h3> Lines: </h3>

<ul>
  <% @stops.each do |stop| %>
    <% if stop.line_id == @line.id %>
       <li><%= stop.station.name %></li>
      <% end %>
    <% end %>
  </ul>


<p><%= link_to "Edit", edit_line_path(@line), :class => "btn btn-info" %></p>
<p><%= link_to "Delete", line_path(@line),
                          :data => {:confirm => "You suuurreeeee?",
                          :method => "delete"},
                          :class => "btn btn-danger" %></p>

<%= link_to "Lines Menu", lines_path, :class => "btn btn-default" %>

<%= link_to "Stops Menu", stops_path, :class => "btn btn-default" %>

